{
  "compilerOptions": {
    "target": "es5",
    "module": "esNext",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "jsx": "react",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["es5"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "pretty": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}